use tui;
use tui::line_gauge;

{
    // Thin lines - subtle
    let thin = line_gauge(#filled_style: &style(#fg: `Cyan), &0.75);

    // Thick lines - bold (default)
    let thick = line_gauge(#filled_style: &style(#fg: `Green), &0.75);

    // Result
    line_gauge(#filled_style: &style(#fg: `Yellow), &0.75)
}
