use tui;
use tui::layout;
use tui::text;

{
    let selected_pane = 0;
    let sidebar = text(&"Sidebar");
    let main_content = text(&"Main");

    layout(
      #direction: &`Horizontal,
      #focused: &selected_pane,
      &[
        child(#constraint: `Percentage(30), sidebar),
        child(#constraint: `Percentage(70), main_content)
      ]
    )
}
