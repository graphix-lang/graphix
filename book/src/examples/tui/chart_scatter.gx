use tui;
use tui::chart;
use tui::text;

{
    let data = [(1.0, 2.0), (2.0, 4.0), (3.0, 6.0), (4.0, 8.0)];

    let scatter_ds = dataset(
        #graph_type: &`Scatter,
        #marker: &`Dot,
        #style: &style(#fg: `Yellow),
        &data
    );

    let x_axis = axis(#labels: [line("0"), line("5")], {min: 0.0, max: 5.0});
    let y_axis = axis(#labels: [line("0"), line("10")], {min: 0.0, max: 10.0});

    chart(#x_axis: &x_axis, #y_axis: &y_axis, &[scatter_ds])
}
