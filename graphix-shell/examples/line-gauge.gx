use tui;
use tui::block;
use tui::line_gauge;

let power = {
    let clock = time::timer(duration:0.5s, true);
    let n = 0.0;
    n <- min(1.0, clock ~ n + 0.01);
    n
};

let color = select power {
  x if x < 0.10 => `Red,
  x if x < 0.25 => `Yellow,
  x => `Green
};

block(
  #border:&`All,
  #title:&line("Power"),
  &line_gauge(
    #filled_style:&style(#fg: color),
    &power
  )
)
