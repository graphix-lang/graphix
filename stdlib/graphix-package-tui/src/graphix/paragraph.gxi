type Paragraph = {
  alignment: &[Alignment, null],
  lines: &[Array<Line>, string],
  scroll: &{ x: i64, y: i64 }, // y is in lines, x is in chars
  style: &Style,
  trim: &bool // trim leading whitespace when wrapping
};

val paragraph: fn(
  ?#style: &Style,
  ?#alignment: &[Alignment, null],
  ?#scroll: &{x: i64, y: i64},
  ?#trim: &bool,
  &[Array<Line>, string]
) -> Tui;
