{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Graphix",
    "scopeName": "source.graphix",
    "patterns": [
        { "include": "#comments" },
        { "include": "#keywords" },
        { "include": "#constants" },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#types" },
        { "include": "#functions" },
        { "include": "#variables" },
        { "include": "#operators" }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.documentation.graphix",
                    "match": "///.*$"
                },
                {
                    "name": "comment.line.double-slash.graphix",
                    "match": "//.*$"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.graphix",
                    "match": "\\b(select|if|try|catch)\\b"
                },
                {
                    "name": "keyword.other.graphix",
                    "match": "\\b(let|rec|mod|use|type|fn|cast|any|with|where|throws|as)\\b"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.language.boolean.graphix",
                    "match": "\\b(true|false)\\b"
                },
                {
                    "name": "constant.language.null.graphix",
                    "match": "\\b(null|ok)\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.graphix",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        { "include": "#escape-sequence" },
                        { "include": "#interpolation" }
                    ]
                },
                {
                    "name": "string.quoted.single.raw.graphix",
                    "begin": "r'",
                    "end": "'"
                }
            ]
        },
        "escape-sequence": {
            "patterns": [
                {
                    "name": "constant.character.escape.graphix",
                    "match": "\\\\([\\\\\"nrt0\\[\\]]|x[0-9a-fA-F]{2}|u\\{[0-9a-fA-F]+\\})"
                }
            ]
        },
        "interpolation": {
            "name": "meta.interpolation.graphix",
            "begin": "\\[",
            "end": "\\]",
            "beginCaptures": {
                "0": { "name": "punctuation.special.interpolation.begin.graphix" }
            },
            "endCaptures": {
                "0": { "name": "punctuation.special.interpolation.end.graphix" }
            },
            "patterns": [{ "include": "$self" }]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.hex.graphix",
                    "match": "\\b0[xX][0-9a-fA-F_]+\\b"
                },
                {
                    "name": "constant.numeric.binary.graphix",
                    "match": "\\b0[bB][01_]+\\b"
                },
                {
                    "name": "constant.numeric.octal.graphix",
                    "match": "\\b0[oO][0-7_]+\\b"
                },
                {
                    "name": "constant.numeric.float.graphix",
                    "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9][0-9_]*)?\\b"
                },
                {
                    "name": "constant.numeric.integer.graphix",
                    "match": "\\b[0-9][0-9_]*\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "support.type.primitive.graphix",
                    "match": "\\b(bool|string|bytes|i8|u8|i16|u16|i32|u32|v32|z32|i64|u64|v64|z64|f32|f64|decimal|datetime|duration|Any|Array|Map)\\b"
                },
                {
                    "comment": "type variable 'a",
                    "name": "entity.name.type.parameter.graphix",
                    "match": "'[a-z][a-zA-Z0-9_]*"
                },
                {
                    "comment": "variant constructor `Foo",
                    "name": "entity.name.tag.variant.graphix",
                    "match": "`[A-Z][a-zA-Z0-9_]*"
                },
                {
                    "comment": "capitalized type/constructor name",
                    "name": "entity.name.type.graphix",
                    "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "comment": "builtin reference $foo",
                    "name": "entity.name.function.builtin.graphix",
                    "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
                },
                {
                    "comment": "function call: name(",
                    "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*\\(",
                    "captures": {
                        "1": { "name": "entity.name.function.graphix" }
                    }
                },
                {
                    "comment": "module-qualified call: mod::name(",
                    "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*::\\s*([a-z_][a-zA-Z0-9_]*)\\s*\\(",
                    "captures": {
                        "1": { "name": "entity.name.namespace.graphix" },
                        "2": { "name": "entity.name.function.graphix" }
                    }
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "comment": "labeled parameter/argument #name",
                    "name": "variable.parameter.labeled.graphix",
                    "match": "#[a-z][a-zA-Z0-9_]*"
                },
                {
                    "comment": "module path prefix (before ::)",
                    "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*::",
                    "captures": {
                        "1": { "name": "entity.name.namespace.graphix" }
                    }
                },
                {
                    "comment": "struct field name in { field: ... }",
                    "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*:",
                    "captures": {
                        "1": { "name": "variable.other.property.graphix" }
                    }
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.assignment.graphix",
                    "match": "<-|=>"
                },
                {
                    "name": "keyword.operator.arrow.graphix",
                    "match": "->"
                },
                {
                    "name": "keyword.operator.namespace.graphix",
                    "match": "::"
                },
                {
                    "name": "keyword.operator.comparison.graphix",
                    "match": "==|!=|<=|>=|<|>"
                },
                {
                    "name": "keyword.operator.logical.graphix",
                    "match": "&&|\\|\\||!"
                },
                {
                    "name": "keyword.operator.arithmetic.graphix",
                    "match": "[+\\-*/%]"
                },
                {
                    "name": "keyword.operator.other.graphix",
                    "match": "[~?&@]"
                }
            ]
        }
    }
}
